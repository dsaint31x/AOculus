<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cef76e"
    tools:context="com.example.jaeeun.extraocular.MainActivity_fifteen">


    <ImageView
        android:id="@+id/left_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_img"

        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/extra_start"
        android:layout_alignEnd="@+id/extra_start" />

    <ImageView
        android:id="@+id/right_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/icon_img"
        android:layout_centerVertical="true"
        android:layout_alignTop="@+id/left_icon"
        android:layout_alignLeft="@+id/extra_pause"
        android:layout_alignStart="@+id/extra_pause" />


    <Button
        android:id="@+id/extra_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="시작"
        android:textSize="16dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/extra_pause"
        android:layout_toStartOf="@+id/extra_pause"
        android:layout_marginRight="57dp"
        android:layout_marginEnd="57dp" />

    <Button
        android:id="@+id/extra_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일시정지"
        android:textSize="16dp"
        android:layout_marginRight="202dp"
        android:layout_marginEnd="202dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:id="@+id/progressBar"
        android:indeterminateOnly="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:max="100"
        />


</RelativeLayout>
